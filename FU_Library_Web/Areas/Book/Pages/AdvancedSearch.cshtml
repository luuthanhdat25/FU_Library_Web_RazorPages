                                                    <option value="3">Nhà xuất bản</option>
                                                    <option value="4">Chỉ số DDC</option>
                                                    <option value="5">Ngôn ngữ</option>
                                                    <option value="6">Từ khóa</option>
                                                    <option value="7">Môn học</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-10">
