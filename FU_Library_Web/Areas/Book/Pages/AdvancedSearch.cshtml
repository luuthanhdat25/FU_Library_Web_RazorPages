<style>
    .main-content {
        min-height: 700px;
        background: #f1f1f1;
    }

    .opac-search h3.title {
        margin-top: 20px;
    }

        .opac-search h3.title span {
            font-size: 30px;
            font-weight: bold;
        }

    #opac-search-container {
        margin-top: 20px;
    }

    .custom-tab.nav-tabs > li.active > a,
    .custom-tab.nav-tabs > li.active > a:hover,
    .custom-tab.nav-tabs > li.active > a:focus {
        background-color: #faae2d;
        color: #fff;
        border-color: transparent;
    }

    .form-cn {
        background-color: rgba(255, 255, 255, 0.6);
        padding: 30px 30px 30px;
        border-top: 5px solid #faae2d;
        background: #fff;
    }

    .form-cn.child {
        padding: 0 15px 9px;
        border-bottom: 1px solid #faae2d;
        border-left: 1px solid #faae2d;
        border-right: 1px solid #faae2d;
        margin-bottom: 20px;
    }

    #form-quick-content .form-search {
        margin-top: 20px;
    }

    .form-search .select-options {
        width: 100%;
    }

    .slOptions {
        width: 100%;
        height: 30px !important;
        padding: 5px;
        font-size: 13px;
    }

    .form-search input.txtSearch {
        height: 30px !important;
        width: 100%;
        padding: 5px;
        border: 1px solid #c3c3c3;
        border-radius: 0;
        color: #034cab;
        font-weight: bold;
        font-size: 13px;
    }

    .form-search input#btnSearch {
        height: 30px !important;
        margin-left: -100px;
        color: white;
        background-color: #f26f21;
        border: 1px solid #f26f21;
        font-size: 13px;
        width: 88px;
    }

    .form-search input#btnAdvancedSearch {
        height: 30px !important;
        color: white;
        background-color: #337ab7;
        border: 1px solid #337ab7;
        font-size: 13px;
        width: 88px;
    }

    .form-search input#btnAdvancedReset {
        height: 30px !important;
        color: white;
        background-color: #f26f21;
        border: 1px solid #f26f21;
        font-size: 13px;
        width: 88px;
    }

    .text-md-right {
        text-align: right !important;
    }

    .align-self-center {
        align-self: center !important;
    }

    .col-form-lable {
        padding-top: calc(0.375rem + 2px);
        padding-bottom: calc(0.375rem + 2px);
        margin-bottom: 0;
        font-size: 15px;
    }

    #form-advanced-content .form-search {
        margin-top: 20px;
    }

    .divProcessing {
        position: fixed;
        left: 0px;
        top: 0px;
        width: 100%;
        height: 100%;
        z-index: 9999;
        background: url('Content/Images/ajax-loader.gif') center no-repeat #fff;
    }
</style>

<div class="divProcessing" style="display:none;"></div>

