@page
@model FU_Library_Web.Areas.News.Pages.IndexModel

@{
    ViewData["Title"] = "Danh sách tin tức";
}

<!-- CSS Link -->
@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <style>
        .all-even-item {
            margin-bottom: 20px;
            padding: 10px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .all-even-item img {
            border-radius: 5px;
        }

        .item-info {
            font-size: 14px;
            color: #777;
        }

        .item-summary {
            font-size: 16px;
            line-height: 1.5;
            color: #333;
        }

        .pagination-container {
            margin-top: 20px;
        }

        .pagination li.active a {
            background-color: #007bff;
            color: #fff;
        }

        .pagination li a {
            color: #007bff;
            padding: 10px 15px;
            text-decoration: none;
        }

        .pagination li a:hover {
            background-color: #ddd;
        }

        .readmore {
            color: #007bff;
            font-weight: bold;
            text-decoration: none;
        }

        .readmore:hover {
            text-decoration: underline;
        }

 
    </style>
}

<div id="main-content">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="all-even">
