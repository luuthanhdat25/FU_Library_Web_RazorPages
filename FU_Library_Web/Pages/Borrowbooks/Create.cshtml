@page
@model FU_Library_Web.Pages.Borrowbooks.CreateModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@if (Model.Book != null)
{
    <div>
        <h4>Book Details</h4>
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.Book.Title</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Book.Description</dd>
            <dt class="col-sm-2">ISBN</dt>
            <dd class="col-sm-10">@Model.Book.ISBN</dd>
            <!-- Add other book details here as needed -->
        </dl>
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BorrowBooks.ReturnDate" class="control-label"></label>
                <input asp-for="BorrowBooks.ReturnDate" class="form-control" />
                <span asp-validation-for="BorrowBooks.ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowBooks.BorrowedDate" class="control-label"></label>
                <input asp-for="BorrowBooks.BorrowedDate" class="form-control" />
                <span asp-validation-for="BorrowBooks.BorrowedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowBooks.BookId" class="control-label"></label>
                <select asp-for="BorrowBooks.BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BorrowBooks.UserId" class="control-label"></label>
                <select asp-for="BorrowBooks.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BorrowBooks.RequestStatusId" class="control-label"></label>
                <select asp-for="BorrowBooks.RequestStatusId" class ="form-control" asp-items="ViewBag.RequestStatusId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
