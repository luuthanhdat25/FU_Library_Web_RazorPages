@page
@model FU_Library_Web.Pages.Borrowbooks.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BorrowBook</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BorrowBook.BorrowedDate" class="control-label">Ngày mượn</label>
                <input asp-for="BorrowBook.BorrowedDate" class="form-control" />
                <span asp-validation-for="BorrowBook.BorrowedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowBook.ReturnDate" class="control-label">Ngày trả</label>
                <input asp-for="BorrowBook.ReturnDate" class="form-control" />
                <span asp-validation-for="BorrowBook.ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowBook.BookId" class="control-label">Tên sách</label>
                <select asp-for="BorrowBook.BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BorrowBook.UserId" class="control-label">MSSV</label>
                <select asp-for="BorrowBook.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Đặt mượn" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
