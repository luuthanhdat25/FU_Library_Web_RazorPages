@page
@{
    ViewData["Title"] = "FPT Library";
    Layout = "_Layout";
}
<style>
    .main-search {
        background-color: rgba(255, 165, 0, 0.8); /* Màu cam nhạt với opacity 80% */
        padding: 15px 20px;
        border-radius: 8px; /* Thêm bo tròn cho góc */
        display: flex; /* Dùng flex để căn chỉnh các phần tử nằm ngang */
        justify-content: space-between; /* Căn chỉnh các phần tử ở giữa */
        align-items: center; /* Căn chỉnh phần tử dọc */
        flex-wrap: wrap; /* Cho phép các phần tử xuống dòng nếu không đủ chỗ */
        width: 100%; /* Đảm bảo phần tìm kiếm không vượt ra ngoài */
    }

    /* Phần tìm kiếm nằm ngang với các phần tử căn chỉnh bên cạnh nhau */
    .main-search-block-content form {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        width: 100%;
    }

    .select-options {
        margin-right: 10px; /* Khoảng cách giữa dropdown và input */
    }

    #btnSearch {
        background-color: #FFA500; /* Màu cam đậm */
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px; /* Thêm bo tròn cho góc nút */
    }

        #btnSearch:hover {
            background-color: #FF8C00; /* Thay đổi màu cam khi hover */
        }

    #txtSearch {
        padding: 8px 15px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #FFA500; /* Thêm viền màu cam */
        margin-right: 10px; /* Khoảng cách giữa input và nút */
    }

    .main-search-block-content a {
        color: white; /* Màu chữ trắng */
        font-size: 15px;
        text-decoration: none;
    }

        .main-search-block-content a + span {
            margin-left: 10px;
            margin-right: 10px;
            border-right: 2px solid white;
        }
</style>

<div class="container">

    <div class="main-wrapper">
        <div class="main-search">
            <div class="main-search-block-content">
                <form method="get" action="https://library.fpt.edu.vn/SearchBook" onsubmit="return validateForm()">
                    <div class="select-options">
                        <select name="options" id="slOptions">
                            <option value="0" selected="selected">All</option>
                            <option value="1">Title</option>
                            <option value="2">Author</option>
                            <option value="3">Publisher</option>
                            <option value="4">DDC</option>
                            <option value="5">Language</option>
                            <option value="6">Keyword</option>
                            <option value="7">Subject</option>
                            <option value="8">ISBN</option>
                        </select>
                    </div>
                    <input type="search" id="txtSearch" name="keyword" size="100" placeholder="Everything" autocomplete="off" />
                    <input type="submit" id="btnSearch" value="Search" />
                </form>
            </div>
        </div>
    </div>
</div>