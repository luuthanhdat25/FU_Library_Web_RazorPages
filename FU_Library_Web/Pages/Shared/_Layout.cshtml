<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        .navbar {
            background-color: #FFD700;
            color: #FFFFFF;
        }

            .navbar .navbar-nav .nav-link {
                color: #FFFFFF;
            }

                .navbar .navbar-nav .nav-link:hover {
                    background-color: #FFC107;
                    color: #FFFFFF;
                }

        .navbar-nav {
            justify-content: center;
            width: 100%;
        }

        .dropdown-menu {
            background-color: #FFD700;
        }

        .navbar-nav .nav-item {
            display: inline-block;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .main-wrapper {
            flex: 1;
        }

        main {
            margin-top: 20px;
        }

        footer {
            background-color: #FFA500;
            padding: 40px 0;
            margin-top: auto;
        }

        .bg-light {
            background-color: transparent !important;
        }

        .footer-widget-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .contact-info {
            margin-bottom: 10px;
        }

        .social-contact a {
            font-size: 20px;
            margin-right: 15px;
            color: #333;
            text-decoration: none;
        }

            .social-contact a:hover {
                color: #FFD700;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle" href="#" id="booksDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                            Sách
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="booksDropdown">
                            <li><a class="dropdown-item" asp-area="" asp-page="/Books/Index">Danh sách</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-page="/Books/Create">Tạo mới</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle" href="#" id="newsDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                            Tin tức
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="newsDropdown">
                            <li><a class="dropdown-item" asp-area="News" asp-page="/Index">Tin hoạt động</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        <nav class="navigation">
            <ul class="h-100">
                <li><a href="#">Trang chủ</a></li>
                <li><a href="#">Giới thiệu</a></li>
                <li><a href="#">Nội quy</a></li>
                <li><a href="#">Dịch vụ</a></li>
                <li><a href="#">Bộ sưu tập</a></li>
                <li><a href="#">Tin tức</a></li>
            </ul>
        </nav>
    </header>
    @RenderBody()
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FU_Library_Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>