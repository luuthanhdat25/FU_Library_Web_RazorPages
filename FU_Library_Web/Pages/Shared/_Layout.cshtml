<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        .navbar {
            background-color: #FFD700;
            color: #FFFFFF;
        }

            .navbar .navbar-nav .nav-link {
                color: #FFFFFF;
            }

                .navbar .navbar-nav .nav-link:hover {
                    background-color: #FFC107;
                    color: #FFFFFF;
                }

        .navbar-nav {
            justify-content: center;
            width: 100%;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .main-wrapper {
            flex: 1;
        }

        main {
            margin-top: 20px;
        }

        footer {
            background-color: #FFA500;
            padding: 40px 0;
            margin-top: auto;
        }

        .bg-light {
            background-color: transparent !important;
        }

        .footer-widget-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .contact-info {
            margin-bottom: 10px;
        }

        .social-contact a {
            font-size: 20px;
            margin-right: 15px;
            color: #333;
            text-decoration: none;
        }

            .social-contact a:hover {
                color: #FFD700;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <ul>
                    <li><a href="/">Trang chủ</a></li>
                    <li><a href="/Login">Đăng nhập</a></li> 
                </ul>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="newsDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                Tin tức
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="newsDropdown">
                                <li><a class="dropdown-item" asp-area="News" asp-page="/Index">Tin hoạt động</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container" style="margin-top: 20px;">
        @RenderSection("Styles", false)
        @RenderSection("Scripts", false)
        @RenderBody()
    </main>

    <footer>
        <div class="footer bg-light pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-12 mb-4">
                        <h3 class="footer-widget-title">FPT UNIVERSITY LIBRARY</h3>
                        <div class="contact-info">
                            <i class="fa fa-location-arrow"></i>
                            <span class="ml-2">
                                Phòng 107 tòa nhà Delta, Trường Đại học FPT, Khu CNC Hòa Lạc, Km29 Đại Lộ Thăng Long, Thạch Thất, Hà Nội
                            </span>
                        </div>
                        <div class="contact-info">
                            <i class="fa fa-envelope"></i>
                            <span class="ml-2">
                                <a href="mailto:thuvien_fu_hoalac@fpt.edu.vn">thuvien_fu_hoalac@fpt.edu.vn</a>
                            </span>
                        </div>
                        <div class="contact-info">
                            <i class="fa fa-phone"></i>
                            <span class="ml-2">02466 805 912</span>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-4">
                        <h3 class="footer-widget-title">Follow us</h3>
                        <div class="social-contact">
                            <ul class="list-unstyled d-flex">
                                <li class="mr-3">
                                    <a href="https://www.facebook.com/thuvienfu" class="fa fa-facebook-official" target="_blank"></a>
                                </li>
                                <li class="mr-3">
                                    <a href="https://www.youtube.com/channel/UCXavXXYzplrnIeVl0-wR3uw" class="fa fa-youtube" target="_blank"></a>
                                </li>
                                <li>
                                    <a href="javascript:void(0);" class="fa fa-twitter"></a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <h3 class="footer-widget-title">WEBSITE ACCESS STATISTICS</h3>
                        <ul class="list-unstyled">
                            <li class="online-now">
                                <i class="fa fa-smile-o"></i>
                                <span class="ml-2">Online: <span>1191</span></span>
                            </li>
                            <li class="online-now">
                                <i class="fa fa-user-circle-o"></i>
                                <span class="ml-2">Today: <span>3189</span></span>
                            </li>
                            <li class="online-now">
                                <i class="fa fa-calendar-plus-o"></i>
                                <span class="ml-2">Yesterday: <span>13683</span></span>
                            </li>
                            <li class="online-now">
                                <i class="fa fa-calendar"></i>
                                <span class="ml-2">This month: <span>95886</span></span>
                            </li>
                            <li class="online-now">
                                <i class="fa fa-calendar"></i>
                                <span class="ml-2">Last month: <span>402460</span></span>
                            </li>
                            <li class="online-now">
                                <i class="fa fa-sitemap"></i>
                                <span class="ml-2">All: <span>6100898</span></span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Include jQuery, Popper.js, and Bootstrap JS for dropdown functionality -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
