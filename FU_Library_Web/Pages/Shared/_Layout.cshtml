<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        .navbar {
            background-color: #FFD700;
            color: #FFFFFF;
        }

            .navbar .navbar-nav .nav-link {
                color: #FFFFFF;
            }

                .navbar .navbar-nav .nav-link:hover {
                    background-color: #FFC107;
                    color: #FFFFFF;
                }

        .navbar-nav {
            justify-content: center;
            width: 100%;
        }

        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .main-wrapper {
            flex: 1;
        }

        main {
            margin-top: 20px;
        }

        footer {
            background-color: #FFA500;
            padding: 40px 0;
            margin-top: auto;
        }

        .bg-light {
            background-color: transparent !important;
        }

        .footer-widget-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .contact-info {
            margin-bottom: 10px;
        }

        .social-contact a {
            font-size: 20px;
            margin-right: 15px;
            color: #333;
            text-decoration: none;
        }

            .social-contact a:hover {
                color: #FFD700;
            }
    </style>
</head>
<body>
    <header>
        <div class="header-container">
            <div class="logo">
                <img src="~/images/logo.png" alt="FPT University Logo">
            </div>
            <div class="welcome-info">
                <h1>Welcome to <strong style="color: #f3030f;">FPT Library</strong> </h1>
                <p>Open: 08:15 - 21:00 Weekday | 08:00 - 12:00 & 13:00 - 17:00 Weekend</p>
            </div>
            <div class="language-login">
                <a href="/Auth/Login">Login</a> | <a href="#">Vietnamese</a>
            </div>
        </div>
        <nav class="navigation">
            <ul class="h-100">
                <li><a href="#">Trang chủ</a></li>
                <li><a href="#">Giới thiệu</a></li>
                <li><a href="#">Nội quy</a></li>
                <li><a href="#">Dịch vụ</a></li>
                <li><a href="#">Bộ sưu tập</a></li>
                <li><a href="#">Tin tức</a></li>
            </ul>
        </nav>
    </header>
    @RenderBody()
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FU_Library_Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Include jQuery, Popper.js, and Bootstrap JS for dropdown functionality -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
